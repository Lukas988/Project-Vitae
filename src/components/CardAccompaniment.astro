---
import HeartHandIcon from "./icons/HeartHand.astro";
import RouteIcon from "./icons/Route.astro";
import AppleIcon from "./icons/Apple.astro";

const ACCOMPANIMENTS = [
  {
    title: "Apoyo Psicológico",
    Icon: HeartHandIcon
  },
  {
    title: "Orientación Personalizada",
    Icon: RouteIcon
  },
  {
    title: "Planes de Nutrición",
    Icon: AppleIcon
  }
];
---

{
  ACCOMPANIMENTS.map(({ title, Icon }) => (
    <div class="border-secondary-500 bg-green-100 border-r-8 flex items-center p-4 rounded-lg w-full">
      <div class="text-secondary-500 bg-white p-3 rounded-full">
        <Icon class="h-8 w-8" />
      </div>
      <p class="ml-4 text-lg font-bold text-secondary-700">{title}</p>
    </div>
  ))
}