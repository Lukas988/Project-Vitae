---
import ButtonForm from "./ButtonForm.astro";
---

<form id="formContact" class="w-full">
    <div class="grid grid-cols-6 gap-3">
      <div class="col-span-6">
        <label for="name" class="block mb-2 text-sm font-bold text-slate-900">Nombre Completo</label>
        <input type="text" name="name" id="name" class="outline-none bg-slate-50 border-2 border-slate-200 text-slate-900 sm:text-sm rounded-lg  focus:border-blue-500 block w-full p-2.5" placeholder="María Agustina López" required="">
        <p id="nameError" class="text-red-500 text-xs mt-1 font-bold hidden">Solo se permiten letras y espacios en el nombre.</p>
      </div>

      <div class="col-span-6">
        <label for="email" class="block mb-2 text-sm font-bold text-slate-900">Correo Electrónico</label>
        <input type="text" name="email" id="email" class="outline-none bg-slate-50 border-2 border-slate-200 text-slate-900 sm:text-sm rounded-lg focus:border-blue-500 block w-full p-2.5" placeholder="mariaagus9816@gmail.com" required="">
        <p id="emailError" class="text-red-500 text-xs mt-1 font-bold hidden">El correo electrónico debe tener un formato válido como ejemplo@dominio.com.</p>
      </div>

      <div class="col-span-6">
        <label for="phone" class="block mb-2 text-sm font-bold text-slate-900">Teléfono</label>
        <input type="number" name="phone" id="phone" class="outline-none bg-slate-50 border-2 border-slate-200 text-slate-900 sm:text-sm rounded-lg  focus:border-blue-500 block w-full p-2.5" placeholder="3875321123" required="">
        <p id="phoneError" class="text-red-500 text-xs mt-1 font-bold hidden">El numero debe tener un formato válido como 3875321123</p>
      </div>

      <div class="col-span-6">
        <label for="message" class="block mb-2 text-sm font-bold text-slate-900">En qué podemos ayudarte</label>
        <textarea id="message" name="message" rows="4" class="outline-none block p-2.5 w-full sm:text-sm text-slate-900 bg-slate-50 rounded-lg border-2 border-slate-200 focus:border-blue-500" placeholder="Quiero solicitar un Turno de Ginecología con la Dra. Carolina Cortez" required></textarea>
        <p id="messageError" class="text-red-500 text-xs mt-1 font-bold hidden">El mensaje debe tener al menos 10 caracteres.</p>
      </div>

      <div class="col-span-6 mt-2 flex justify-center items-center">
        <ButtonForm textColor="text-white" bgColor="bg-yellow-400" bgHover="bg-yellow-500"> 
          Contactar Ahora
        </ButtonForm>
      </div>
    </div>
</form>