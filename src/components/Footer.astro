---
import DataFooter from "./DataFooter.astro";
import LinksFooter from "./LinksFooter.astro";
import Logo from "./Logo.astro";

import FacebookIcon from "./icons/Facebook.astro";
import InstagramIcon from "./icons/Instagram.astro";
import WhatsAppIcon from "./icons/WhatsApp.astro"

const linkList = [
    { 
        title: 'Facebook', 
        href: 'https://www.facebook.com/vitaemed/',
        Icon: FacebookIcon
    },
    { 
        title: 'Instagram', 
        href: 'https://www.instagram.com/vitaesalta/',
        Icon: InstagramIcon
    },
    { 
        title: 'Whatsapp', 
        href: 'https://wa.me/+543875898999',
        Icon: WhatsAppIcon
    }
];
---

<footer class="w-full bg-white">
  <div class="mx-auto w-full max-w-screen-xl p-4 md:py-8">
    <div class="md:flex md:justify-between">          
      <div class="mb-12 md:mb-0 w-full md:max-w-[380px] lg:max-w-[500px]">
        <Logo class="inline-flex"/>
        <p class="mt-4 text-sm text-gray-500">Somos líderes en el NOA en el abordaje interdisciplinario de la fertilidad: <b>Ginecología, Obstetricia, Endocrinología, Cardiología, Ecografías, Psicología, Nutrición y otros</b></p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 md:gap-10 text-center text-gray-500">
        <DataFooter />
      </div>
    </div>

    <hr class="my-4 border-gray-200 sm:mx-auto lg:my-8" />

    <div class="text-center py-4">
      <span class="text-sm text-gray-500 sm:text-center">
        © 2025 <a href="/" class="hover:underline">Vitae™</a>. Derechos reservados.
      </span>  

      <div class="flex mt-4 justify-center mt-2 space-x-3">
        {linkList.map((link) => (
          <LinksFooter title={link.title} href={link.href} Icon={link.Icon} />
        ))}
      </div>
    </div>
    </div>
</footer>












