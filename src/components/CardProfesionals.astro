---
import { profesionals } from '../data/profesionals'
---


{profesionals.map(({prefix, image, name, mp, specialties}) => (
    <div class="w-full bg-white shadow-md rounded-2xl overflow-hidden border border-gray-200 p-6 text-center transition-transform duration-300 hover:scale-105">
        <div class="flex justify-center relative">
            <div class="w-36 h-36 rounded-full bg-gradient-to-r from-primary-800 to-primary-500 p-1 shadow-lg">
                <img src={image} alt={name} class="w-full h-full object-cover rounded-full border-4 border-white" />
            </div>
        </div>

        <h2 class="text-2xl font-semibold text-gray-900 mt-4">
            <span class="font-bold mr-2">{prefix} </span> {name}</h2>
        <p class="text-sm text-gray-500 font-medium">MP: {mp}</p>
        
        <ul class="mt-5 space-y-2 text-left max-w-xs mx-auto">
            {specialties.map((specialty) => (
                <li class="flex items-center text-gray-700 text-sm space-x-2">
                <span class="size-4">
                    <svg class="size-4 text-blue-600 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                </span>
                <span>
                    {specialty}
                </span>
                </li>
            ))}
        </ul>
    </div>
))}