---
import Logo from "./Logo.astro";
import Menu from "./icons/Menu.astro";
import Link from "./LinksHeader.astro";
import ContactIcon from "./icons/Contact.astro";
import ButtonPrimary from "./ButtonPrimary.astro";

const linkList = [
    { title: 'Experiencia', href: '/#experiencia' },
    { title: 'Proyectos', href: '/#proyectos' },
    { title: 'Testimonios', href: '/#testimonios' },
    { title: 'Preguntas', href: '/#preguntas' },
    { title: 'Certificaciones', href: '/#certificaciones'  },
];
---

<header class="shadow-gray-100 sticky top-0 z-[100] transition-all is-active bg-white">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <Logo />
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
        <ButtonPrimary href="/" textColor="text-white" bgColor="bg-primary-500" bgHover="hover:bg-primary-600"> 
            Turnos
            <ContactIcon />
        </ButtonPrimary>

        <button id="menuButton" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden">
            <Menu />
        </button>
    </div>
    <nav class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1 md:flex-grow md:justify-end" id="navbar">
        <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-transparent">
            {
                linkList.map(list => (
                    <Link title={list.title} href={list.href} />
                ))
            }
        </ul>
    </nav>
  </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const header = document.querySelector('header') as HTMLElement;

        const menuButton = document.getElementById('menuButton') as HTMLButtonElement;
        const navbar = document.getElementById('navbar') as HTMLElement;

        menuButton.addEventListener('click', () => {
            navbar.classList.toggle('hidden');
        });

        const navLinks = navbar.querySelectorAll('a');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 768) { 
                        navbar.classList.add('hidden');
                    }
            });
        });

        window.addEventListener('scroll', () => {
            if (window.scrollY > 10) {
                    header.classList.add('border-b', 'border-gray-200');
            } else {
                    header.classList.remove('border-b', 'border-gray-200');
            }
        });
    });
</script>
